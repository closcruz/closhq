/*******************************
         Site Overrides
*******************************/

.pushable:not(body) {
  transform: none;
}

.pushable:not(body) > .ui.sidebar,
.pushable:not(body) > .fixed,
.pushable:not(body) > .pusher:after {
  position: fixed;
}

.sidebar-menu {
  max-width: 250px;
  @media (max-width: 440px) {
    max-width: 200px;
  }
}
